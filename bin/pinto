#!/usr/bin/env perl

use strict;
use warnings;

use Pinto;
use Pinto::Config;

exit run(@ARGV) if not caller;

sub run {
    my ($action, @files) = @_;
    my $cfg = Pinto::Config->new();
    my $pinto = Pinto->new(config => $cfg);

    if ($action eq 'upgrade') {
        $pinto->upgrade();
    }
    elsif ($action eq 'add') {
        $pinto->add(file => $_) for @files;
    }
    elsif ($action eq 'list') {
        $pinto->list();
    }
    else {
        die "Actions are: add|list|upgrade";
    }
}

__END__

=pod


=cut


