#!/usr/bin/perl

# ABSTRACT: interact with a remote Pinto repository
# PODNAME: pinto-client

use strict;
use warnings;

use LWP::UserAgent;

#------------------------------------------------------------------------------

# VERSION

#------------------------------------------------------------------------------

my ($author, $dist) = @ARGV;
my %args = (
    Content_Type => 'form-data',
    Content      => [ author => $author, dist => [$dist], ],
);

my $ua = LWP::UserAgent->new();
my $response = $ua->post( 'http://localhost:1973/action/add', %args );
print $response->content(), "\n";
