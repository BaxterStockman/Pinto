#!/usr/bin/perl

# ABSTRACT: interact with a remote Pinto repository
# PODNAME: pinto-client

use strict;
use warnings;

use LWP::UserAgent;

#------------------------------------------------------------------------------

# VERSION

#------------------------------------------------------------------------------

my ($author, $file) = @ARGV;
my %args = (
        Content_Type => 'form-data',
        Content      => [
                         filename => $file,
                         author   => $author,
                         file     => [$file],
                        ],
);

my $ua = LWP::UserAgent->new();
my $response = $ua->post( 'http://localhost:1973/add', %args );
print $response->content(), "\n";
