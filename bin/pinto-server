#!/usr/bin/perl

# ABSTRACT: provide a web interface to a Pinto repository
# PODNAME: pinto-server

use strict;
use warnings;

use CGI::Application::Dispatch::Server;

#-----------------------------------------------------------------------------

# VERSION

#-----------------------------------------------------------------------------

my $class = 'Pinto::Server::Dispatch';

my $server = CGI::Application::Dispatch::Server->new( class => $class,
                                                      port  => 1973, );

$server->run;
